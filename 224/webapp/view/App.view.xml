<mvc:View
    controllerName="sap.ui5.walkthrough.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    
            <l:VerticalLayout class="sapUiMediumMargin">
                <l:content>
                    <!-- 标题 -->
                    <Title text="SAP UI5 进度条演示" level="H2" class="sapUiMediumMarginBottom"/>
                    
                    <!-- 自定义圆形时钟进度条 -->
                    <core:HTML content="{path: '/progress', formatter: '.formatClockProgress'}" class="sapUiMediumMarginBottom"/>
                    
                    <!-- 按钮区域 -->
                    <l:HorizontalLayout class="sapUiMediumMarginBottom">
                        <l:content>
                            <!-- 开始按钮 -->
                            <Button
                                id="startButton"
                                text="{/buttonText}"
                                type="Emphasized"
                                enabled="{= !${/isRunning}}"
                                press="onStartPress"
                                class="sapUiTinyMarginEnd"/>
                            
                            <!-- 暂停按钮 -->
                            <Button
                                id="pauseButton"
                                text="{= ${/isPaused} ? '继续' : '暂停'}"
                                type="Default"
                                enabled="{/isRunning}"
                                press="onPausePress"
                                class="sapUiTinyMarginEnd"/>
                            
                            <!-- 重置按钮 -->
                            <Button
                                id="resetButton"
                                text="重置"
                                type="Default"
                                enabled="{= !${/isRunning}}"
                                press="onResetPress"/>
                        </l:content>
                    </l:HorizontalLayout>
                    
                    <!-- 状态文本 -->
                    <Text
                        text="{= ${/isRunning} ? (${/isPaused} ? '进度条已暂停' : '进度条运行中...') : (${/progress} === 100 ? '进度完成！' : '点击开始按钮启动进度条')}"
                        class="sapUiMediumMarginTop"/>
                </l:content>
            </l:VerticalLayout>
</mvc:View>